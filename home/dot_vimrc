""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" bash
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
fun! s:DetectBash()
    if getline(1) == '#!/usr/bin/bash' || getline(1) == '#!/bin/bash'
        set ft=bash
        set shiftwidth=2 tabstop=2 smarttab
    endif
endfun
autocmd BufNewFile,BufRead * call s:DetectBash()

