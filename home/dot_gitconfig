[user]
    email = jaredrickert52@gmail.com
    name = Jared Rickert

[core]
    editor = vim
    autocrlf = input

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = red reverse
    local = blue
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white

[branch]
    autosetuprebase = always

[push]
    default = current

[pull]
    default = current

[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig

[init]
    defaultBranch = main

[alias]
    st = status
    stat = status
    cm = commit -m
    cma = commit -a -m
    amend = commit --amend
    caa = commit -a --amend -C HEAD
    filelog = log -u
    fl = log -u
    ch = checkout

