#!/bin/bash

_have() { type "$1" &>/dev/null; }

if [[ -n "$NOCOLOR" ]] ; then
    GOLD=
    RED=
    GREY=
    CYAN=
    GREEN=
    RESET=
fi

_have() { type "$1" &>/dev/null; }

_log() {
    local MSG="${1}"
    shift
    echo "${GREEN}${MSG}:${RESET} $@"
    "$@"
}

_sudo() {
    if [[ "$(whoami)" = "root" ]]; then
        _log "Running" $@
    else
        _log "Running" sudo "$@"
    fi
}

_log "Bootstrapping enviornment"

{{- if .is_wsl -}}
_sudo add-apt-repository ppa:wslutilities/wslu --yes
{{- end }}

{{ if .is_ubuntu }}
_sudo apt-get update --yes
_sudo apt-get remove --yes fzf ## fzf is installed later
_sudo apt-get install --yes \
    apt-transport-https apt-utils atool bash-completion bc bind9-dnsutils btop \
    build-essential ca-certificates cifs-utils curl dialog direnv ed entr \
    fd-find figlet gh git htop httpie iputils-ping jq less \
    libcurses-perl libncurses5 lolcat lynx make man-db ncal net-tools \
    nmap perl pgformatter python3 python3-argcomplete python3-pip ranger \
    ripgrep rsync shellcheck shfmt silversearcher-ag smbclient \
    software-properties-common ssh sshfs sshpass stow sudo tig tmux tree \
    unzip vim wget {{ if .is_wsl -}} wslu {{- end }} xclip zip zsh
{{- end }}

{{ if .is_macos }}
if ! _have /opt/homebrew/bin/brew; then
    _log "Installing homebrew" /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    _log "Sourcing homebrew environment" source <(/opt/homebrew/bin/brew shellenv)
    _log "Install brew packages" brew install ansible ripgrep yq jq yabai zsh-completions ranger watchman fnm exa entr bash bash-completion@2
fi
{{ end }}

{{ if .is_arch }}
_sudo pacman --sync --refresh --needed --noconfirm \
    ansible-core bash-completion bc btop curl entr fd gcc git github-cli httpie jq \
    pandoc shellcheck patch pkgconf python ranger ripgrep tig \
    {{ if .workstation -}} gvim {{ else }} vim {{- end }} tmux yq zip zsh
{{ end }}

if ! _have fdfind; then
    if _have fd; then
        _log "Creating fdfind symlink" ln -sf "$(command -v fd)" "${HOME}/.local/bin/fdfind"
    fi
fi
