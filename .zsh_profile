export XDG_CONFIG_HOME=$HOME/.config
VIM="nvim"

PERSONAL=$XDG_CONFIG_HOME/personal
source $PERSONAL/env
for i in `find -L $PERSONAL`; do
    source $i
done
source /usr/share/doc/fzf/examples/key-bindings.zsh
source /usr/share/doc/fzf/examples/completion.zsh

export GOPATH=$HOME/go
export API_TOOLS=$HOME/work/tools/edge/scripts
export GIT_EDITOR=$VIM
export DENO_INSTALL="$HOME/.deno"
export N_PREFIX="$HOME/.local/n"
export DOTFILES=$HOME/.dotfiles
export FLYCTL_INSTALL=$HOME/.fly
export DENO_INSTALL=$HOME/.deno
export UPNGO_ROOT=$HOME/upngo/upngo-web

# Where should I put you?

export KEYTIMEOUT=1
bindkey -s ^f "tmux-sessionizer\n"
bindkey '^[p' up-history
bindkey '^[n' down-history
bindkey '^[r' history-incremental-search-backward
bindkey -M vicmd '^[n' down-history
bindkey -M vicmd '^[p' up-history
bindkey -M vicmd 'k' up-line
bindkey -M vicmd 'j' down-line
bindkey '^ ' autosuggest-accept

ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#262626"

path=(
    $HOME/.local/bin
    $FLYCTL_INSTALL/bin
    $HOME/.node_modules/bin
    $DENO_INSTALL/bin
    $HOME/.cargo/bin
    $path[@]
)

alias vim=nvim
alias config='/usr/bin/git --git-dir=$DOTFILES/ --work-tree=$HOME'

